<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <span>
      <%= link_to ("<i class='fa fa-university'></i> " + 'PROJECTIFY').html_safe,
          root_path,
          class: "navbar-brand" %>
    <span>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li><%= link_to "Projects", root_path %></li>
        <% end %>

        <% if current_user && current_user.is_admin? %>
          <li>
            <%= link_to "<i class='fa fa-users'></i> Add Members".html_safe,
                new_member_path %>
          </li>
          <li>
            <%= link_to "<i class='fa fa-briefcase'></i> Change Plan".html_safe,
                edit_plan_path%>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to ('<i class="fa fa-user"></i> ' + truncate(current_user.email, length: 25)).html_safe,
                edit_user_registration_path,
                title: 'Edit Profile' %>
          </li>
          <li class="logout">
            <%= link_to('Logout',
                destroy_user_session_path,
                title: 'Logout',
                class: 'text-center',
                method: :delete) %>
          </li>
        <% else %>
          <li class="pull-right">
            <%= link_to('Sign In',
                new_user_session_path,
                title: 'Sign In',
                class: 'text-center') %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
